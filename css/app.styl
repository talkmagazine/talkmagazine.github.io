@import '../node_modules/nib'

global-reset()

// Variables

$siteBackground = #000
$primaryColor = #fff

// Mix-ins
.dead-center
	position: absolute
	top: 50%
	left: 50%
	transform: translate(-50%,-50%)

// Base

html, body
	width: 100%
	margin: 0
	padding: 0
	background: $siteBackground
	color: $primaryColor

.masthead
	@extend .dead-center
	img
		max-width: 100%


