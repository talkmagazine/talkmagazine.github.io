@import '../node_modules/nib'

global-reset()

// Variables

$siteBackground = #000
$primaryColor = #fff

// Mix-ins
.dead-center
	position: absolute
	top: 50%
	left: 50%
	transform: translate(-50%,-50%)

font-url(file)
	return '../fonts/' + file

webfont(family, file, hack-chrome-windows = false, weight = 'normal')
	@font-face
		font-family family
		src url(font-url(file + '.eot'))
		src url(font-url(file + '.eot?#iefix')) format('embedded-opentype'),
			url(font-url(file + '.woff')) format('woff'), 
			url(font-url(file + '.ttf')) format('truetype'), 
			url(font-url(file + '.svg#'+ family)) format('svg')
		font-weight weight
		font-style normal
	if hack-chrome-windows
		@media screen and (-webkit-min-device-pixel-ratio:0)
			@font-face
				font-family family
				src url(font-url(file + '.svg#'+ family)) format('svg')

webfont('Anno', 'Anno_jbf_webprotect', true, 'normal')
webfont('Maria Pro', 'maria-webfont-webfont', true, 'normal')


// Base

html, body
	width: 100%
	margin: 0
	padding: 0
	background: $siteBackground
	-webkit-font-smoothing: antialiased;
	font-family: 'Maria Pro', sans-serif
	color: $primaryColor

.banner
	width: 100%
	height: 50vh
	background: url('../img/banner3.jpg')
	border-bottom: 5px solid #fff
	text-align: center

.masthead
	width: 7.5%
	margin: 0 auto
	padding: 2%
	img
		max-width: 100%


.countdown
	width: 80%
	margin: 0 auto
	padding: 0
	font-family: 'Anno', 'Times New Roman', serif
	text-align: center
	position: relative
	color: transparent
	-webkit-text-stroke-width: 0.015em
	-webkit-text-stroke-color: white
	font-size: 122px
	letter-spacing: -2px




